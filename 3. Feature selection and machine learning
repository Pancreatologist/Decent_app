                       nround =1000
)
pred <- predict(object = lgb.model, 
                newdata=data.matrix(data_pred[,-1]), 
                type = "response")
glmROC=roc(as.numeric(data_pred$diagnosis),as.numeric(pred))
auc=glmROC$auc


